<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="resources/css/estilo.css">
    <title>Catalogo Virtual</title>
</head>
<body>
    <div id="Menu">
        <ol>
            <a href="/"><li>INICIO</li></a>
            <a href="catalogo"><li>CATALOGO</li></a>
            <a href="categorias"><li>CATEGORIAS</li></a>
            <a href="#"><li>INICIAR SESIÓN </li></a>
        </ol>
    </div>
    <div id="Contenido">
        <div class="">
            <div class="">
                <img src="resources/imagenes/logo.png" width="200" alt="ITEM">
            </div>
            <form action="ingreso" method="POST" id="formulario">
                <table>	
                      <tbody><tr>
                        <td><label for="Usuario">Usuario</label></td>
                        <td><input class="dato" type="text" name="Usuario" form="formulario" required="" placeholder="Esbriba su nombre"></td>
                      </tr>
                      <tr>
                        <td><label for="Contraseña">Contraseña</label></td>
                        <td><input class="dato" type="password" name="Contraseña" form="formulario" required=""></td>
                      </tr>
                    <tr>
                        <td></td>
                        <td>
                        <input  type="submit" class="BotonIngresar" value="Ingresar">
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                        <a class="BotonRegistro" href="registro">Registrar</a>
                        </td>
                    </tr>
                      
                </tbody></table>
                </form>
            
            
        </div>
    </div>
    <div id="Lateral">
        <% if(!login){ %>
            <img src="resources/imagenes/sesionNoIniciada.png" width="100" alt="ITEM">
            <h2>Usuario no conectado</h2>
            <h2><strong>Usuario <%= name %></strong></h2>
    
            <% }else{ %>
            <img src="resources/imagenes/sesionIniciada.png" width="100" alt="ITEM">
            <h2>Usuario conectado</h2>
            
            <h2><strong>Cuenta:<%= id_usuario %></strong></h2>
            <h2><strong>Usuario <%= name %></strong></h2>
            <% } %>
    </div>
    
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <% if(typeof alert != "undefined"){%>
     <script>
        swal({
            title:'<%= alertTitle %>',
            text:'<%= alertMessage %>',
            icon:'<%= alertIcon %>',
            ShowConfirmButton:<%= ShowConfirmButton %>,
            timer:<%= timer %>
        }).then(()=>{
            window.location='/<%= ruta %>'
        })
     </script>
     <% } %>
</body>
</html>