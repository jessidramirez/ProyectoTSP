<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="resources/css/estilo.css">
    <title>Catalogo Virtual</title>
</head>
<body>
    <div id="Menu">
        <ol>
            <a href="/"><li>INICIO</li></a>
            <a href="catalogo"><li>CATALOGO</li></a>
            <a href="#"><li>CATEGORIAS</li></a>
            <% if(!login){ %>
                <a href="login"><li>INICIAR SESIÃ“N</li></a>
            <% }else{ %>
                <a href="carrito"><li>CARRITO</li></a>
                <a href="logout"><li>SALIR</li></a>
            <% } %>
        </ol>
    </div>
    <div id="Contenido">

        <% 
        let ValoresCategorias = new Set();
        for(var i = 0; i<productos.length ; i++){      
            ValoresCategorias.add(productos[i].categoria);
        }
        let categoriasArray = Array.from(ValoresCategorias);
        for (var i = 0; i < categoriasArray.length; i++) { 
        %> 
        <div class="seleccion">
            <input width="100px" type="button" value="<%= categoriasArray[i] %>"> 
        </div>
        <% } %>
    </div>
    <div id="Lateral">
        <% if(!login){ %>
            <img src="resources/imagenes/sesionNoIniciada.png" width="100" alt="ITEM">
            <h2>Usuario no conectado</h2>
            <h2><strong>Usuario <%= name %></strong></h2>
    
            <% }else{ %>
            <img src="resources/imagenes/sesionIniciada.png" width="100" alt="ITEM">
            <h2>Usuario conectado</h2>
            
            <h2><strong>Cuenta:<%= id_usuario %></strong></h2>
            <h2><strong>Usuario <%= name %></strong></h2>
            <% } %>
    </div>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <% if(typeof alert != "undefined"){%>
     <script>
        swal({
            title:'<%= alertTitle %>',
            text:'<%= alertMessage %>',
            icon:'<%= alertIcon %>',
            ShowConfirmButton:<%= ShowConfirmButton %>,
            timer:<%= timer %>
        }).then(()=>{
            window.location='/<%= ruta %>'
        })
     </script>
     <% } %>
</body>
</html>